<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="522.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fichaje.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TabPane prefHeight="500.0" prefWidth="750.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="CRUD">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="431.0" prefWidth="750.0">
                  <children>
                     <TableView fx:id="tbCRUDTrabajadores" prefHeight="250.0" prefWidth="800.0">
                       <columns>
                         <TableColumn fx:id="colIdCRUD" prefWidth="50.0" text="ID" />
                         <TableColumn fx:id="colNombreCRUD" prefWidth="175.0" text="NOMBRE" />
                           <TableColumn fx:id="colApellidosCRUD" prefWidth="175.0" text="APELLIDOS" />
                           <TableColumn fx:id="colDNICRUD" prefWidth="150.0" text="DNI" />
                           <TableColumn fx:id="colDepartamentoCRUD" prefWidth="210.0" text="DEPARTAMENTO" />
                       </columns>
                     </TableView>
                     <TextField fx:id="txtId" layoutY="269.0" prefHeight="30.0" prefWidth="100.0" promptText="id" />
                     <TextField fx:id="txtNombre" layoutY="305.0" prefHeight="30.0" prefWidth="300.0" promptText="Nombre" />
                     <TextField fx:id="txtApellidos" layoutY="342.0" prefHeight="30.0" prefWidth="300.0" promptText="Apellidos" />
                     <TextField fx:id="txtDNI" layoutY="382.0" prefHeight="30.0" prefWidth="300.0" promptText="DNI" />
                     <ComboBox fx:id="cmbDepartamento" layoutY="418.0" prefHeight="30.0" prefWidth="300.0" promptText="Departamento" visibleRowCount="3" />
                     <ButtonBar buttonMinWidth="125.0" layoutX="319.0" layoutY="383.0" prefHeight="100.0" prefWidth="400.0">
                       <buttons>
                         <Button fx:id="btnIsertar" cache="true" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: GREEN; -fx-font-family: IMPACT;" text="INSERTAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnModificar" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: YELLOW; -fx-font-family: IMPACT;" text="MODIFICAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnBorrar" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: RED; -fx-font-family: IMPACT;" text="BORRAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                       </buttons>
                     </ButtonBar>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="FICHAJE">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="800.0">
                  <children>
                     <TableView fx:id="tbTrabajadores" prefHeight="200.0" prefWidth="800.0">
                       <columns>
                         <TableColumn fx:id="colIdTrabajadores" prefWidth="50.0" text="ID" />
                         <TableColumn fx:id="colNombreTrabajadores" prefWidth="175.0" text="NOMBRE" />
                           <TableColumn fx:id="colApellidosTrabajadores" prefWidth="175.0" text="APELLIDOS" />
                           <TableColumn fx:id="colDNITrabajadores" prefWidth="150.0" text="DNI" />
                           <TableColumn fx:id="colDepartamentoTrabajadores" prefWidth="210.0" text="DEPARTAMENTO" />
                       </columns>
                     </TableView>
                     <Label fx:id="lbReloj" layoutX="100.0" layoutY="218.0" minHeight="30.0" minWidth="300.0" text="RELOJ" textAlignment="CENTER" />
                     <Button fx:id="btnFichaje" layoutX="526.0" layoutY="218.0" minHeight="30.0" minWidth="125.0" mnemonicParsing="false" style="-fx-border-color: green; -fx-font-family: IMPACT;" text="FICHAJE">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     <TableView fx:id="tbFichaje" layoutY="268.0" prefHeight="200.0" prefWidth="800.0">
                       <columns>
                         <TableColumn fx:id="colIdFichaje" prefWidth="50.0" text="ID" />
                         <TableColumn fx:id="colNombreFichaje" prefWidth="175.0" text="NOMBRE" />
                           <TableColumn fx:id="colFEntradaFichaje" prefWidth="133.75" text="FECHA ENTRADA" />
                           <TableColumn fx:id="colHEntradaFichaje" prefWidth="133.75" text="HORA ENTRADA" />
                           <TableColumn fx:id="colFSalidaFichaje" prefWidth="133.75" text="FECHA SALIDA" />
                           <TableColumn fx:id="colHSalidaFichaje" prefWidth="133.75" text="HORA SALIDA" />
                       </columns>
                     </TableView>
                  </children></AnchorPane>
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
