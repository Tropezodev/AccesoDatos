<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="522.0" prefWidth="800.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.example.fichaje.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TabPane fx:id="tblTrabajadores" prefHeight="500.0" prefWidth="750.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab fx:id="tbCrud" text="CRUD">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="431.0" prefWidth="750.0">
                  <children>
                     <TableView fx:id="tbView" prefHeight="250.0" prefWidth="800.0">
                       <columns>
                         <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                         <TableColumn fx:id="colNombre" prefWidth="150.0" text="NOMBRE" />
                           <TableColumn fx:id="colApellidos" prefWidth="150.0" text="APELLIDOS" />
                           <TableColumn fx:id="colDNI" prefWidth="150.0" text="DNI" />
                           <TableColumn fx:id="colDepartamento" prefWidth="210.0" text="DEPARTAMENTO" />
                       </columns>
                     </TableView>
                     <TextField fx:id="txtId" layoutY="269.0" prefHeight="30.0" prefWidth="100.0" promptText="id" />
                     <TextField fx:id="txtNombre" layoutY="305.0" prefHeight="30.0" prefWidth="300.0" promptText="Nombre" />
                     <TextField fx:id="txtApellidos" layoutY="342.0" prefHeight="30.0" prefWidth="300.0" promptText="Apellidos" />
                     <TextField fx:id="txtDNI" layoutY="382.0" prefHeight="30.0" prefWidth="300.0" promptText="DNI" />
                     <ComboBox fx:id="cmbDepartamento" layoutY="418.0" prefHeight="30.0" prefWidth="300.0" promptText="Departamento" visibleRowCount="3" />
                     <ButtonBar buttonMinWidth="125.0" layoutX="319.0" layoutY="383.0" prefHeight="100.0" prefWidth="400.0">
                       <buttons>
                         <Button fx:id="btnIsertar" cache="true" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: GREEN; -fx-font-family: IMPACT;" text="INSERTAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnModificar" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: YELLOW; -fx-font-family: IMPACT;" text="MODIFICAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnBorrar" mnemonicParsing="false" prefHeight="30.0" style="-fx-border-color: RED; -fx-font-family: IMPACT;" text="BORRAR">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                       </buttons>
                     </ButtonBar>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab fx:id="tbFichaje" text="FICHAJE">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="800.0" />
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
