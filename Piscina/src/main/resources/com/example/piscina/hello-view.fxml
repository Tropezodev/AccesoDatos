<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="563.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.piscina.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </padding>
   <Label alignment="CENTER" text="Control de Acceso Piscina de Orcera">
      <font>
         <Font size="36.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
      <children>
         <Label fx:id="lbFechaHora" alignment="CENTER" maxHeight="50.0" maxWidth="200.0" minHeight="50.0" minWidth="200.0" prefHeight="50.0" prefWidth="200.0" text="FECHAHORA">
            <font>
               <Font size="24.0" />
            </font></Label>
      </children>
   </HBox>
   <VBox prefHeight="50.0" prefWidth="810.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label fx:id="lbNombre" text="NOMBRE" />
                     <TextField fx:id="txtNombre" minWidth="395.0" />
                  </children>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label fx:id="lbAdultos" text="ADULTOS" />
                     <TextField fx:id="txtAdultos" maxWidth="100.0" minWidth="100.0" />
                  </children>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label fx:id="lbMenores" text="MENORES" />
                     <TextField fx:id="txtMenores" maxWidth="100.0" minWidth="100.0" />
                  </children>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label />
                     <Button fx:id="btnInsertar" mnemonicParsing="false" onAction="#insertar" text="INSERTAR" />
                  </children>
               </VBox>
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </HBox>
      </children>
   </VBox>
   <TableView fx:id="tbVentas" prefHeight="200.0" prefWidth="200.0">
     <columns>
         <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
         <TableColumn fx:id="colNombre" prefWidth="260.0" text="NOMBRE" />
         <TableColumn fx:id="colAdultos" prefWidth="75.0" text="ADULTOS" />
         <TableColumn fx:id="colPrecio_A" prefWidth="75.0" text="PRECIO_A" />
         <TableColumn fx:id="colMenores" prefWidth="75.0" text="MENORES" />
         <TableColumn fx:id="colPrecio_M" prefWidth="75.0" text="PRECIO_M" />
       <TableColumn fx:id="colFecha" prefWidth="75.0" text="FECHA" />
       <TableColumn fx:id="colHora" prefWidth="75.0" text="HORA" />
     </columns>
   </TableView>
   <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="50.0">
      <children>
         <Label fx:id="lbTotal" alignment="CENTER" minHeight="50.0" minWidth="200.0" text="TOTAL:">
            <font>
               <Font size="36.0" />
            </font>
         </Label>
         <TextField fx:id="txtTotal" alignment="CENTER" maxWidth="200.0" minHeight="50.0" minWidth="200.0" promptText="TOTAL">
            <font>
               <Font size="36.0" />
            </font>
         </TextField>
      </children>
   </HBox>
</VBox>
