<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="600.0" minWidth="800.0" prefHeight="103.0" prefWidth="82.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="TOP_CENTER" minHeight="250.0" minWidth="800.0">
         <children>
            <VBox alignment="TOP_CENTER" minHeight="300.0" minWidth="800.0">
               <children>
                  <Label contentDisplay="CENTER" style="-fx-font-family: impact;" text="TODOLIST">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tbPendientes" onMouseReleased="#callbackClicTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colIDPendiente" prefWidth="100.0" text="ID" />
                      <TableColumn fx:id="colTareaPendiente" prefWidth="700.0" text="TAREA PENDIENTE" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" minHeight="250.0" minWidth="800.0">
         <children>
            <VBox minHeight="250.0" minWidth="800.0">
               <children>
                  <HBox alignment="CENTER_LEFT" minHeight="50.0" minWidth="800.0" spacing="10.0">
                     <children>
                        <Label fx:id="lbID" alignment="CENTER" minHeight="35.0" minWidth="100.0" text="ID">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtTarea" minHeight="35.0" minWidth="250.0" promptText="Tarea">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <CheckBox fx:id="chbRealizada" minHeight="35.0" minWidth="135.0" mnemonicParsing="false" text="Realizada">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                        <Button fx:id="btnInsertar" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" onAction="#insertar" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="INSERTAR" />
                        <Button fx:id="btnModificar" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" onAction="#modificar" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="MODIFICAR" />
                        <Button fx:id="btnBorrar" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" onAction="#borrar" style="-fx-border-color: red; -fx-border-radius: 10; -fx-background-radius: 10;" text="BORRAR" />
                     </children>
                  </HBox>
                  <TableView fx:id="tbCompletadas" onMouseDragReleased="#callbackClicTable1" onMouseReleased="#callbackClicTable1" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colIDCompletada" prefWidth="100.0" text="ID" />
                      <TableColumn fx:id="colTareaCompletada" prefWidth="700.0" text="TAREA COMPLETADA" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
